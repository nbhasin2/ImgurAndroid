<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/carddemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--android:padding="16dp"-->

            <!--Image -->


            <com.doctoror.gifimageloader.NetworkGifImageView
                android:id="@+id/img_grid_item_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="16dp">
            </com.doctoror.gifimageloader.NetworkGifImageView>

            <epicara.UI.CardImageView
                android:id="@+id/img_grid_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="16dp">
            </epicara.UI.CardImageView>

            <!--Image title-->

            <TextView
                android:id="@+id/img_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:gravity="center"
                android:background="@drawable/ic_button_background_light_grey"
                />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/progressGif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_loader"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>